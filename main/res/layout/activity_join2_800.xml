<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/img_signupbox2" >

        <EditText
            android:id="@+id/join_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            android:textColor="#000" >
        </EditText>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#BDBDBD" />

        <EditText
            android:id="@+id/join_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:hint="휴대전화번호"
            android:inputType="number"
            android:textColor="#000" >
        </EditText>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#BDBDBD" />

        <TextView 
            android:id="@+id/join_birth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
			android:textSize="20sp"
			android:text="생년월일 선택"
            android:textColor="#58595B" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#BDBDBD" />
	
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="16"
            android:gravity="center_vertical">
            
	        <ImageButton
			    android:id="@+id/join_man"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@android:color/transparent"/>
	
	        <ImageButton
			    android:id="@+id/join_woman"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/join_man"
	            android:background="@android:color/transparent"
	            android:layout_marginLeft="5dp" /> 
	            
        </RelativeLayout>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#BDBDBD" />

        <TextView
            android:id="@+id/join_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:layout_below="@id/join_man"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
			android:text="거주지 선택"
            android:textColor="#58595B" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#BDBDBD" />

        <TextView
            android:id="@+id/join_job"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
			android:text="직업선택"
			android:textSize="20sp"
            android:textColor="#58595B" />
        
            <requestFocus />

    </LinearLayout>

	<ImageView
	   android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
	   android:layout_marginTop="12dp"
	   android:src="@drawable/img_gaeinjungbo" />

	<ImageButton
	    android:id="@+id/join_ok"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_marginTop="12dp"
	    android:background="@android:color/transparent"
	    android:src="@drawable/img_signup_ok" />

</LinearLayout>
